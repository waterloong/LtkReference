<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.waterloong.ltk_reference">
    <uses-sdk android:minSdkVersion="15"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".view.MainActivity"
                   android:theme="@style/Theme.AppCompat.Light"
                   android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".view.HeroDetailActivity"
                android:parentActivityName=".view.HeroListActivity"/>
        <activity android:name=".view.HeroListActivity"
                android:parentActivityName=".view.MainActivity"/>
        <activity android:name=".view.CardActivity"/>
    </application>
</manifest>
