<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heroChildRowAvatar" android:background="@drawable/caocao" android:minWidth="120px"
            android:minHeight="120px"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp" android:longClickable="false" android:weightSum="2">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:weightSum="2">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/heroChildRowTitle" android:gravity="center_vertical|right"
                    android:layout_weight="1" android:textColor="@color/gold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/heroChildRowName" android:gravity="center_vertical|left"
                    android:layout_weight="1"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/heroChildRowMisc" android:gravity="center" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>