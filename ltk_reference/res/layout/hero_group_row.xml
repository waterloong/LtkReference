<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:weightSum="3">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/heroGroupRowCategory" android:singleLine="true" android:layout_weight="2"
            android:gravity="center" android:longClickable="false" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/heroGroupRowCount" android:layout_weight="1" android:gravity="right"
            android:textSize="30sp"/>
</LinearLayout>